#### -*- Mode: Makefile -*-
#### Makefile for Darwin/PPC systems

### Not tested!

CC=gcc
SHFLAGS=
CFLAGS+= $(SHFLAGS) -Wall -g -c
LDFLAGS+= $(SHFLAGS) -dynamiclib -Wl,-soname,$(SHLIB_NAME).$(SHLIB_SUFFIX)
OBJ_SUFFIX=o
SHLIB_SUFFIX=dylib
LIB_NAME=decnumber
SHLIB_NAME=lib$(LIB_NAME)

DECNUMBER_CFLAGS=$(CFLAGS) -D DECLITEND=$(DECLITEND) -D DECDPUN=$(DECDPUN)
DECNUMBER_LDFLAGS=$(LDFLAGS) -D DECLITEND=$(DECLITEND) -D DECDPUN=$(DECDPUN)
